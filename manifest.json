{
  "manifest_version": 3,
  "name": "每日鸡血",
  "version": "1.0.0",
  "description": "每天定时推送励志名言和故事，让你充满正能量！",
  "author": "Daily Chicken",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    },
    "default_title": "每日鸡血"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "alarms",
    "storage",
    "notifications",
    "tabs"
  ]
}
